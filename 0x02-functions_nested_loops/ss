#!/bin/bash

# Define the filename and code
filename="3-islower.c"
code="#include \"main.h\"

/**
 * _islower - check if char is lowercase
 * @c: is the char to be checked
 * Return: 1 if char is lowercase, otherwise 0.
 */

int _islower(int c)
{
    if (c >= 'a' && c <= 'z')
        return (1);
    else
        return (0);
}
"

# Create the file with the specified code
echo "$code" > "$filename"

chmod u+x "$filename"

# Inform the user that the file has been created
echo "File '$filename' has been created with the provided code."


# Define the filename and code
filename1="4-isalpha.c"
code1="#include \"main.h\"

/**
 * _isalpha - checks for alphabetic character
 * @c: the character to be checked
 * Return: 1 if c is a letter, 0 otherwise
 */
int _isalpha(int c)
{
    return ((c >= 'a' && c <= 'z') || (c >= 'A' && c <= 'Z'));
}
"

# Create the file with the specified code
echo "$code1" > "$filename1"

# Add execute permission to the generated file
chmod u+x "$filename1"

# Inform the user that the file has been created
echo "File '$filename1' has been created with the provided code and made executable."



# Define the filename and code
filename2="5-sign.c"
code2="#include \"main.h\"

/**
 * print_sign - prints the sign of a number
 * @n: the int to check
 * Return: 1 and prints + if n is greater than zero
 * 0 and prints 0 if n is zero
 * -1 and prints - if n is less than zero
 */
int print_sign(int n)
{
    if (n > 0)
    {
        _putchar('+');
        return (1);
    }
    else if (n == 0)
    {
        _putchar('0');
        return (0);
    }
    else if (n < 0)
    {
        _putchar('-');
        return (-1);
    }
}
"

# Create the file with the specified code
echo "$code2" > "$filename2"

chmod u+x "$filename2"

# Inform the user that the file has been created
echo "File '$filename2' has been created with the provided code."
